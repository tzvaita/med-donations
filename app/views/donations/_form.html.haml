= form_with(model: donation) do |form|
  - if donation.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(donation.errors.count, "error")
        prohibited this donation from being saved:
      %ul
        - donation.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name, value: params[:name]
  %div
    = form.label :quantity, style: "display: block"
    = form.number_field :quantity, value: params[:quantity]
  %div
    = form.hidden_field :targeted, value: params[:targeted] if params[:targeted].present?
  %div
    = form.hidden_field :request_id, value: params[:request_id] if params[:request_id].present?
  %button.btn.btn-primary
    = form.submit
